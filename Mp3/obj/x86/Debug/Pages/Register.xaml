<Page
    x:Class="Mp3.Pages.Register"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Mp3.Pages"
    xmlns:m="using:Mp3.Entity"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer Margin="50, 0, 0 , 0">
        <StackPanel>
            <RelativePanel>
                <Button x:ConnectionId='22' x:Name="button_cap" Width="100" Height="100" Background="LightGray" Content="Add photo"                      Margin="0,24"/>
                <Image x:ConnectionId='23' x:Name="Avatar" Width="100" Height="100" Margin="24, 24, 0, 24" RelativePanel.RightOf="button_cap"></Image>
            </RelativePanel>
            

            <RelativePanel>
                <TextBox x:ConnectionId='20' x:Name="firstname" Header= "Firstname" Margin="0,0,12,0" MaxLength="32" Width="198" HorizontalAlignment="Left"/>
                <TextBox x:ConnectionId='21' x:Name="lastname" Header= "Lastname" Margin="12,0,0,0" MaxLength="32" Width="198" RelativePanel.RightOf="firstname"/>
            </RelativePanel>
            <RelativePanel>
                <TextBlock x:ConnectionId='18' x:Name="firstname_er" Foreground="Red" Margin="0,0,12,0" Width="198" HorizontalAlignment="Left"></TextBlock>
                <TextBlock x:ConnectionId='19' x:Name="lastname_er" Foreground="Red" Margin="12,0,0,0" Width="198" RelativePanel.RightOf="firstname_er"></TextBlock>
            </RelativePanel>

            <TextBox x:ConnectionId='2' x:Name="email" Header= "Email" Width="420" HorizontalAlignment="Left"/>
            <TextBlock x:ConnectionId='3' x:Name="email_er" Foreground="Red" Width="420" HorizontalAlignment="Left"/>

            <PasswordBox x:ConnectionId='4' x:Name="password" Header= "Password" Width="420" HorizontalAlignment="Left"/>
            <TextBlock x:ConnectionId='5' x:Name="password_er" Foreground="Red" Width="420" HorizontalAlignment="Left"/>

            <TextBox x:ConnectionId='6' x:Name="address" Header= "Address" Width="420" HorizontalAlignment="Left"/>
            <TextBlock x:ConnectionId='7' x:Name="address_er" Foreground="Red" Width="420" HorizontalAlignment="Left"/>

            <TextBox x:ConnectionId='8' x:Name="introduction" Header= "Introduction" Width="420" HorizontalAlignment="Left"/>
            <TextBlock x:ConnectionId='9' x:Name="introduction_er" Foreground="Red" Width="420" HorizontalAlignment="Left"/>

            <TextBox x:ConnectionId='10' x:Name="phone" Header= "Phone" Width="420" HorizontalAlignment="Left"/>
            <TextBlock x:ConnectionId='11' x:Name="phone_er" Foreground="Red" Width="420" HorizontalAlignment="Left"/>

            <RelativePanel>
                <DatePicker x:ConnectionId='16' x:Name="birthday" Header="Birthday" HorizontalAlignment="Left" Width="300"></DatePicker>
                <ComboBox x:ConnectionId='17' x:Name="gender" Header= "Gender" Margin="24,0,0,0"  Width="96" RelativePanel.RightOf="birthday">
                    <x:String>Male</x:String>
                    <x:String>Female</x:String>
                </ComboBox>
            </RelativePanel>
            <RelativePanel>
                <TextBlock x:ConnectionId='14' x:Name="birthday_er" Foreground="Red" Width="300" HorizontalAlignment="Left"></TextBlock>
                <TextBlock x:ConnectionId='15' x:Name="gender_er" Foreground="Red" Margin="24,0,0,0" Width="96" RelativePanel.RightOf="birthday_er"></TextBlock>
            </RelativePanel>
            <RelativePanel>
                <Button x:ConnectionId='12' Margin="0, 24, 0, 0"                            x:Name="res_button" Width="80">Register</Button>
                <Button x:ConnectionId='13' Margin="50, 24, 0, 0"                       Width="80" RelativePanel.RightOf="res_button">Cancel</Button>
            </RelativePanel>
            
        </StackPanel>
    </ScrollViewer>
</Page>

